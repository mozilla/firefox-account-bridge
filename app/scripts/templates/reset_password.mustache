<header>
  <h1 id='fxa-reset-password-header' class="fox-logo"><span>{{#t}}Firefox Accounts{{/t}}</span></h1>

  <h2>{{#t}}Reset password{{/t}}</h2>
</header>

<section>
  <div class="error"></div>

  <form novalidate>
    <p>{{#t}}Enter your email to reset&nbsp;the account password.{{/t}}</p>

    <div class="input-row">
      <input name="email" type="email" class="email" placeholder="{{#t}}Email{{/t}}" autofocus required>
    </div>

    <div class="button-row">
      <button type="submit" class="disabled">{{#t}}Next{{/t}}</button>
    </div>
  </form>

  <div class="links">
    {{#forceAuth}}
      <a id="back" href="/force_auth">{{#t}}Back{{/t}}</a>
    {{/forceAuth}}
    {{^forceAuth}}
      <a id="back" href="/signin">{{#t}}Back{{/t}}</a>
    {{/forceAuth}}
  </div>
</section>
