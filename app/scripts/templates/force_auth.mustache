<div id="main-content" class="card">
  <header>
    <h1 id="fxa-force-auth-header">{{#t}}Sign in to continue{{/t}}</h1>
  </header>

  <section>
    {{#fatalError}}
      <div class="error visible"></div>
    {{/fatalError}}
    {{^fatalError}}

    <div class="error"></div>
    <div class="avatar-wrapper avatar-view">
    </div>
    <form novalidate>
      <p class="prefillEmail">{{ email }}</p>
      <input type="email" class="email hidden" value="{{ email }}" disabled />
      <div class="input-row password-row">
        <input type="password" class="password tooltip-below" id="password" placeholder="{{#t}}Password{{/t}}" required pattern=".{8,}" required {{#email}}autofocus{{/email}} />
      </div>

      <div class="button-row">
        <button id="submit-btn" type="submit">{{{buttonSignInText}}}</button>
      </div>
    </form>

    <div class="links">
      <a href="/reset_password" class="reset-password" data-flow-event="forgot-password">{{#t}}Forgot password?{{/t}}</a>
    </div>

    <div class="extra-links">
      {{#unsafeTranslate}}By proceeding, you agree to the <a id="fxa-tos" href="/legal/terms">Terms of Service</a> and <a id="fxa-pp" href="/legal/privacy">Privacy Notice</a>.{{/unsafeTranslate}}
    </div>
    {{/fatalError}}
  </section>
</div>
