<div id="main-content" class="card">
  <header>
    <h1 id="{{headerId}}">{{{escapedHeaderTitle}}}</h1>
  </header>

  <section>
    <div class="error"></div>

    <p class="account-ready-service">
      {{#isSync}}
        {{{escapedReadyToSyncText}}}</p>
      {{/isSync}}
      {{^isSync}}
      {{#serviceName}}
        {{#t}}You are now ready to use %(serviceName)s{{/t}}
      {{/serviceName}}
      {{^serviceName}}
          {{#emailVerified}}
              {{{escapedEmailReadyText}}}
          {{/emailVerified}}

          {{^emailVerified}}
              {{#t}}Your account is ready!{{/t}}
          {{/emailVerified}}
      {{/serviceName}}
    {{/isSync}}
    </p>


    <div class="graphic graphic-checkbox">{{#t}}Success{{/t}}</div>

    {{^isSync}}
      {{#showContinueButton}}
      <div class="button-row">
        <button class="btn-continue">{{#t}}Continue{{/t}}</button>
      </div>
      {{/showContinueButton}}
    {{/isSync}}

    <div class="marketing-area"></div>
  </section>
</div>

