<div id="display-name" class="settings-unit">
  <div class="error"></div>

  <div class="settings-unit-stub">
    <header class="settings-unit-summary">
      <h2 class="settings-unit-title">{{#t}}Display name{{/t}}</h2>
      {{#displayName}}
        <h3 class="settings-unit-subtitle">{{ displayName }}</h3>
      {{/displayName}}
    </header>
    {{#displayName}}
      <button class="settings-button secondary settings-unit-toggle hidden">{{#t}}Change{{/t}}</button>
    {{/displayName}}
    {{^displayName}}
      <button class="settings-button secondary settings-unit-toggle hidden">{{#t}}Add{{/t}}</button>
    {{/displayName}}
  </div>

  <div class="settings-unit-details">
    <form novalidate>
      <p>
        {{#t}}Insert pending rationale for display name.{{/t}}
      </p>
      <div class="input-row">
        <input type="text" class="text" placeholder="{{#t}}Display name{{/t}}" value="{{ displayName }}" autocomplete="off"/>
      </div>
      <div class="button-row">
        <button type="submit" class="settings-button primary disabled">{{#t}}Add{{/t}}</button>
        <button class="settings-button secondary cancel">{{#t}}Cancel{{/t}}</button>
      </div>
  </div>
</div>
