<div id="avatar-change">
  <section class="modal-panel">
    <div class="main-avatar">
      <p class="avatar-wrapper">
      </p>
    </div>

    <div class="error"></div>

    <nav id="avatar-options">
      <input type="file" id="imageLoader" name="imageLoader" accept="image/png, image/jpeg"/>
      <a href="#" id="file">{{#t}}Upload{{/t}}</a>
      <a href="/settings/avatar/camera" id="camera">{{#t}}Camera{{/t}}</a>
      <a href="/settings/avatar/gravatar_permissions" id="gravatar">{{#t}}Gravatar{{/t}}</a>
      {{#hasProfileImage}}
      <a href="#" class="remove">{{#t}}Clear{{/t}}</a>
      {{/hasProfileImage}}
    </nav>

    <div class="button-row">
      <button id="done" class="settings-button secondary cancel">{{#t}}Done{{/t}}</button>
    </div>
  </section>
</div>
