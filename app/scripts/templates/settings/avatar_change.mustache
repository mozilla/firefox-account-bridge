  <section>
    <div class="main-avatar">
      <p class="avatar-wrapper">
      </p>
      <a href="#" class="remove icon-cancel"></a>
    </div>

    <div class="error"></div>
    <div class="success"></div>

    <nav id="avatar-options">
      <input type="file" id="imageLoader" name="imageLoader" accept="image/png, image/jpeg"/>
      <a href="#" id="file"><span class="icon-plus"></span>{{#t}}Upload{{/t}}</a>
      <a href="/settings/avatar/camera" id="camera"><span class="icon-camera-alt"></span>{{#t}}Camera{{/t}}</a>
      <a href="/settings/avatar/gravatar_permissions" id="gravatar"><span class="gravatar-logo"></span>{{#t}}Gravatar{{/t}}</a>
    </nav>

    <div class="button-row">
      <button class="settings-button secondary cancel">{{#t}}Done{{/t}}</button>
    </div>
  </section>
