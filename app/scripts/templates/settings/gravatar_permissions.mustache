<div id="avatar-gravatar-permissions">
  <section class="modal-panel">
    <header>
      <h1 id="fxa-permissions-header">{{#t}}Request for permission{{/t}}</h1>
    </header>
    <div class="error"></div>

    <p id="permission-request">{{#t}}%(serviceName)s wants the following information from your account:{{/t}}</p>

    <form id="permissions" novalidate>
      <div class="input-row">
        <label class="small-label">{{#t}}Email{{/t}}</label>
        <input type="email" class="email" value="{{ email }}" disabled/>
      </div>

      <div class="button-row">
        <button type="submit" id="accept" class="settings-button primary disabled">{{#t}}Accept{{/t}}</button>
        <button class="settings-button secondary" id="back">{{#t}}Cancel{{/t}}</button>
      </div>
    </form>
  </section>
</div>
