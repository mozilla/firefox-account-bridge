<div id="communication-preferences" class="settings-unit{{#isPanelOpen}} open{{/isPanelOpen}} {{#isBasketReady}}basket-ready{{/isBasketReady}}">
  <div class="settings-unit-stub">
    <header class="settings-unit-summary">
      <h2 class="settings-unit-title">{{#t}}Communication preferences{{/t}}</h2>
    </header>
    <button class="settings-button secondary settings-unit-toggle hidden"
      data-href="settings/communication_preferences">{{#t}}Changeâ€¦{{/t}}</button>
  </div>

  <div class="settings-unit-details">
  {{#error}}
    <div class="error visible nudge">
      {{error}}
    </div>
    <form novalidate>
      <div class="button-row">
        <button class="settings-button secondary cancel unpaired">{{#t}}Cancel{{/t}}</button>
      </div>
    </form>
  {{/error}}
  {{^error}}
    <div class="error"></div>

    <form novalidate>
      <p>
        {{#t}}Receive the monthly Firefox newsletter.{{/t}}
        {{#preferencesUrl}}
          <a href="{{preferencesUrl}}" id="preferences-url" class="right">{{#t}}Email preferences{{/t}}</a>
        {{/preferencesUrl}}
      </p>

      <div class="button-row">
        <button type="submit" id="marketing-email-optin" class="marketing-email-optin settings-button primary" autofocus>
          {{#isOptedIn}}
            {{#t}}Unsubscribe{{/t}}
          {{/isOptedIn}}
          {{^isOptedIn}}
            {{#t}}Subscribe{{/t}}
          {{/isOptedIn}}
        </button>
        <button class="settings-button secondary cancel">{{#t}}Cancel{{/t}}</button>

      </div>
    </form>
  {{/error}}
  </div>
</div>
