<div id="communication-preferences" class="settings-unit{{#isPanelOpen}} open{{/isPanelOpen}} {{#isBasketReady}}basket-ready{{/isBasketReady}}">
  <div class="settings-unit-stub">
    <header class="settings-unit-summary">
      <h2 class="settings-unit-title">{{#t}}Communication preferences{{/t}}</h2>
    </header>
    <button class="settings-button secondary settings-unit-toggle hidden"
      data-href="settings/communication_preferences">{{#t}}Changeâ€¦{{/t}}</button>
  </div>

  <div class="settings-unit-details">
  {{#error}}
    <div class="error visible">
      {{error}}
    </div>
    <form novalidate>
      <div class="button-row">
        <button class="settings-button secondary cancel unpaired">{{#t}}Cancel{{/t}}</button>
      </div>
    </form>
  {{/error}}
  {{^error}}
    <div class="error"></div>

    <form novalidate>
      <p>
        {{#t}}We may send you emails related to your Firefox Account.{{/t}}<br/><br/>

        {{#t}}Additionally, you can choose whether to receive the latest news about Mozilla and Firefox.{{/t}}
      </p>

      <div class="button-row">
        {{^isOptedIn}}
          <button type="submit" id="marketing-email-optin" class="marketing-email-optin settings-button primary" autofocus>
            {{#t}}Subscribe{{/t}}
          </button>
          <button class="settings-button secondary cancel" id="marketing-email-cancel">{{#t}}Cancel{{/t}}</button>
        {{/isOptedIn}}
        {{#isOptedIn}}
          <button id="marketing-email-manage" class="marketing-email-optin settings-button primary" autofocus>
            {{#t}}Manage Subscriptions{{/t}}
          </button>
          <button class="settings-button secondary cancel" id="marketing-email-done">{{#t}}Done{{/t}}</button>
        {{/isOptedIn}}

      </div>
    </form>
  {{/error}}
  </div>
</div>
