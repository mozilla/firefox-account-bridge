  <section>
    <div class="avatar-wrapper">
      <div class="progress-container">
      </div>
      <div id="avatar-camera-wrapper">
        <video id="video" class="hidden"></video>
      </div>
    </div>

    <div class="error"></div>
    <div class="success"></div>

    <canvas id="canvas"></canvas>

    <form novalidate>
      <div class="button-row">
        <button id="submit-btn" type="submit" class="disabled">{{#t}}Take picture{{/t}}</button>
      </div>
    </form>

    <ul class="links">
      <li><a href="/settings/avatar/change" class="cancel">{{#t}}Cancel{{/t}}</a>
    </ul>
  </section>
