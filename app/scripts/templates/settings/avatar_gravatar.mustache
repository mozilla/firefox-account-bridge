<div id="avatar-gravatar">
  <section class="modal-panel">
    <div class="avatar-wrapper with-default">
      {{#gravatar}}
        <img src="{{ gravatar }}" id="gravatar" alt="Gravatar" />
      {{/gravatar}}
    </div>

    <div class="error"></div>

    <form novalidate>
      <div class="button-row">
        <button id="submit-btn" type="submit" class="settings-button primary {{^gravatar}}disabled{{/gravatar}}">{{#t}}Save{{/t}}</button>
        <button class="settings-button secondary" id="back">{{#t}}Cancel{{/t}}</button>
      </div>
    </form>
  </section>
</div>
