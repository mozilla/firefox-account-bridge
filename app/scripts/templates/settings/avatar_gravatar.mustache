  <section>
    <div class="avatar-wrapper with-default">
      {{#gravatar}}
        <img src="{{ gravatar }}" id="gravatar" alt="Gravatar" />
      {{/gravatar}}
    </div>

    <div class="error"></div>

    <form novalidate>
      <div class="button-row">
        <button id="submit-btn" type="submit" {{^gravatar}}class="disabled"{{/gravatar}}>{{#t}}Save{{/t}}</button>
      </div>
    </form>
    <ul class="links">
      <li><a href="/settings/avatar/change" class="cancel">{{#t}}Cancel{{/t}}</a>
    </ul>
  </section>
