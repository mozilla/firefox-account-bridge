  {{#showSignUpMarketing}}
    <aside class="marketing-ios">
      {{#isIos}}
        <p>
          {{#t}}Get the full Sync experience.{{/t}}
          <br>
          {{#t}}Download Firefox for iOS!{{/t}}
        </p>
        <a class="marketing-link marketing-link-ios" href="https://app.adjust.com/2uo1qc?campaign=fxa-conf-page&adgroup=ios&creative=button&fallback=https://itunes.apple.com/app/apple-store/id989804926?pt=373246&ct=adjust_tracker&mt=8" data-marketing-id="spring-2015-android-ios-sync"><img width="129" height="45" src="{{ appStoreImage }}" alt="{{#t}}Download Firefox for iOS!{{/t}}" /></a>
      {{/isIos}}

      {{#isAndroid}}
        <p>
          {{#t}}Get the full Sync experience.{{/t}}
          <br>
          {{#t}}Download Firefox for Android.{{/t}}
        </p>
        <a class="marketing-link marketing-link-android" href="https://app.adjust.com/2uo1qc?campaign=fxa-conf-page&adgroup=android&creative=button" data-marketing-id="spring-2015-android-ios-sync"><img width="129" height="45" src="{{ playStoreImage }}" alt="{{#t}}Download Firefox for Android.{{/t}}"></a>
      {{/isAndroid}}

      {{#isOther}}
        <div class="os-general">
          <p>
            {{#t}}Get the full Sync experience.{{/t}}
            <br>
            {{#t}}Download Firefox for mobile devices.{{/t}}
          </p>

          <ul>
            <li>
                <a class="marketing-link marketing-link-android" href="https://app.adjust.com/2uo1qc?campaign=fxa-conf-page&adgroup=android&creative=button" data-marketing-id="spring-2015-android-ios-sync"><img width="129" height="45" src="{{ playStoreImage }}" alt="{{#t}}Download Firefox for Android.{{/t}}"></a>
            </li>
            <li>
                <a class="marketing-link marketing-link-ios" href="https://app.adjust.com/2uo1qc?campaign=fxa-conf-page&adgroup=ios&creative=button&fallback=https://itunes.apple.com/app/apple-store/id989804926?pt=373246&ct=adjust_tracker&mt=8" data-marketing-id="spring-2015-android-ios-sync"><img width="129" height="45" src="{{ appStoreImage }}" alt="{{#t}}Download Firefox for iOS!{{/t}}" /></a>
            </li>
          </ul>
        </div>
      {{/isOther}}
    </aside>
  {{/showSignUpMarketing}}
