<header>
  <h1 class="fox-logo"><span>{{#t}}Firefox Accounts{{/t}}</span></h1>

  <h2 id="fxa-delete-account-header">{{#t}}Delete account{{/t}}</h2>
  <h3>{{#t}}Are you sure you want to delete your account? This action cannot be undone.{{/t}}</h2>
</header>

<section>
  <div class="error"></div>

  <form novalidate>
    <div class="input-row">
      <input type="email" class="email" placeholder="{{#t}}Email{{/t}}" autofocus>
    </div>

    <div class="input-row password-row">
      <input type="password" class="password tooltip-below" id="password" placeholder="{{#t}}Password{{/t}}" pattern=".{8,}" required {{#isSync}}autocomplete="off"{{/isSync}} />

      <input id="show-password" type="checkbox" class="show-password" aria-controls="password" />
      <label for="show-password" class="show-password-label">
        {{#t}}Show{{/t}}
      </label>

    </div>

    <div class="button-row">
      <button type="submit" class="disabled">{{#t}}Delete Account{{/t}}</button>
    </div>
  </form>

  <div class="links">
    <a href="#" id="back">{{#t}}Back{{/t}}</a>
  </div>
</section>
