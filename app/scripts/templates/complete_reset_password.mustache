<header>
  <h1 id='fxa-complete-reset-password-header' class="fox-logo"><span>{{#t}}Firefox Accounts{{/t}}</span></h1>

  <h2>{{#t}}Reset password{{/t}}</h2>
</header>

<section>
  <div class="error"></div>

  <form novalidate>
    <div class="input-row password-row">
      <input type="password" class="password" id="password" placeholder="{{#t}}Password{{/t}}" pattern=".{8,}" autofocus required {{#isSync}}autocomplete="off"{{/isSync}} />

      <input id="show-password" type="checkbox" class="show-password" aria-controls="password">
      <label for="show-password" class="show-password-label">
        {{#t}}Show{{/t}}
      </label>
    </div>

    <div class="input-row password-row">
      <input type="password" class="password tooltip-below" id="vpassword" placeholder="{{#t}}Repeat Password{{/t}}" pattern=".{8,}" required {{#isSync}}autocomplete="off"{{/isSync}} />

      <input id="show-vpassword" type="checkbox" class="show-password" aria-controls="vpassword">
      <label for="show-vpassword" class="show-password-label">
        {{#t}}Show{{/t}}
      </label>

      <div class="input-help">{{#t}}Must be at least 8 characters{{/t}}</div>
    </div>

    <div class="button-row">
      <button type="submit" class="disabled">{{#t}}Next{{/t}}</button>
    </div>
  </form>
</section>
