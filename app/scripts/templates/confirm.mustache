<div id="main-content" class="card">
  <header>
    {{#isSignUp}}
    <h1 id="fxa-confirm-header">{{#t}}Confirm your account{{/t}}</h1>
    {{/isSignUp}}
    {{#isSignIn}}
    <h1 id="fxa-confirm-signin-header">{{#t}}Confirm this sign-in{{/t}}</h1>
    {{/isSignIn}}
  </header>

  <section>
    <div class="error"></div>
    <div class="success">
      {{#t}}Email resent{{/t}}
    </div>

    <div class="graphic graphic-mail">{{#t}}Email Sent{{/t}}</div>

    {{#isSignUp}}
    <p class="verification-email-message">{{#t}}A verification link has been sent&nbsp;to %(email)s{{/t}}</p>
    {{/isSignUp}}
    {{#isSignIn}}
    <p class="verification-email-message">{{#t}}To better protect your Firefox data, we've emailed a confirmation link to %(email)s{{/t}}</p>
    {{/isSignIn}}


    {{#isOpenGmailButtonVisible}}
      <div class="button-row">
        <a href="{{{ gmailLink }}}" class="button" target="_blank" id="open-gmail" type="button">{{#t}}Open Gmail{{/t}}</a>
      </div>
    {{/isOpenGmailButtonVisible}}

    <div class="links">
      {{^canGoBack}}
        <a id="resend" class="delayed-fadein" href="#">{{#t}}Didn't arrive? Resend{{/t}}</a>
      {{/canGoBack}}
      {{#canGoBack}}
        <a id="back" class="left delayed-fadein" href="#">{{#t}}Back{{/t}}</a>
        <a id="resend" class="right delayed-fadein" href="#">{{#t}}Didn't arrive? Resend{{/t}}</a>
      {{/canGoBack}}
    </div>
  </section>
</div>
