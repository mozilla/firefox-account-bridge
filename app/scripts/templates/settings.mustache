<div id="fxa-settings-header-wrapper">
  <header class="fxa-settings-header">
    <h1 id="fxa-manage-account">{{#t}}Manage account{{/t}}</h1>
    {{#showSignOut}}
    <button id="signout" class="settings-button secondary">Sign Out</button>
    {{/showSignOut}}
  </header>
</div>


<div id="fxa-settings-profile-header">
    {{#avatarLinkVisible}}
    <div class="avatar-wrapper avatar-settings-view">
      <a href="/settings/avatar/change" class="change-avatar"></a>
    </div>
    {{/avatarLinkVisible}}
    {{^avatarLinkVisible}}
    <div class="avatar-wrapper avatar-settings-view">
    </div>
    {{/avatarLinkVisible}}
    <p class="signed-in-email-message">
      {{#t}}Hello, {{/t}} {{email}}
    </p>
</div>

<div id="fxa-settings-content" class="card">

<div id="change-avatar" class="settings-unit">
  <div class="settings-unit-stub">
    <header class="settings-unit-summary">
      <h2 class="settings-unit-title">Account Picture</h2>
    </header>
    <button class="settings-button secondary settings-unit-toggle">{{#t}}Change {{/t}}</button> 
  </div>
</div>

<div id="display-name" class="settings-unit">
  <div class="success">Hello</div>
  <div class="error"></div>
  
  <div class="settings-unit-stub">
    <header class="settings-unit-summary">
      <h2 class="settings-unit-title">{{#t}}Display name{{/t}}</h2>
    </header>
    <button class="settings-button secondary settings-unit-toggle hidden">{{#t}}Add {{/t}}</button>
  </div>

  <div class="settings-unit-details">
    <form novalidate>
      <p>
        {{#t}}Insert pending rationale for display name.{{/t}}
      </p>   
      <div class="input-row">
        <input type="text" class="text" placeholder="{{#t}}Display name{{/t}}" value="{{ displayName }}" autocomplete="off"/>
      </div>
      <div class="button-row">
        <button type="submit" class="settings-button primary disabled">{{#t}}Add{{/t}}</button>
        <button class="settings-button secondary cancel">{{#t}}Cancel{{/t}}</button>
      </div>
  </div>
</div>

<div id="communication-preferences" class="settings-unit">
  <div class="success">Hello</div>
  <div class="error"></div>

    <div class="settings-unit-stub">
    <header class="settings-unit-summary">
      <h2 class="settings-unit-title">{{#t}}Communication preferences{{/t}}</h2>
    </header>
    <button class="settings-button secondary settings-unit-toggle hidden">{{#t}}Change {{/t}}</button>
  </div>

   <div class="settings-unit-details">
    <form novalidate>
      <p>
        {{#t}}Get the latest news about Mozilla and Firefox.{{/t}}
              {{#preferencesUrl}}
      <a href="#" id="back" class="left back">{{#t}}Back{{/t}}</a>
      <a href="{{preferencesUrl}}" id="preferences-url" class="right">{{#t}}Email preferences{{/t}}</a>
      {{/preferencesUrl}}
      </p>

      <div class="button-row">
        <button type="submit" id="marketing-email-optin" class="marketing-email-optin settings-button primary">
          {{#isOptedIn}}
            {{#t}}Unsubscribe{{/t}}
          {{/isOptedIn}}
          {{^isOptedIn}}
            {{#t}}Subscribe{{/t}}
          {{/isOptedIn}}
        </button>
        <button class="settings-button secondary cancel">{{#t}}Cancel{{/t}}</button>

      </div>
    </form>
  </div>
</div>

<div id="change-password" class="settings-unit">
  <div class="success">Hello</div>
  <div class="error"></div>

    <div class="settings-unit-stub">
    <header class="settings-unit-summary">
      <h2 class="settings-unit-title">{{#t}}Password{{/t}}</h2>
    </header>
    <button class="settings-button secondary settings-unit-toggle hidden">{{#t}}Change{{/t}}</button>
  </div>

  <div class="settings-unit-details">

    <form novalidate>
      <p>
        {{#t}}Once you're finished, use your new password to sign in on all of your devices.{{/t}}
      </p>
      <div class="input-row password-row">
        <label class="label-helper"></label>
        <input type="password" class="password" id="old_password" placeholder="{{#t}}Old password{{/t}}" pattern=".{8,}" autofocus required {{#isPasswordAutoCompleteDisabled}}autocomplete="off"{{/isPasswordAutoCompleteDisabled}} />

        <input id="show-old-password" type="checkbox" class="show-password" aria-controls="old_password" tabindex="-1" data-novalue />
        <label for="show-old-password" class="show-password-label">
          {{#t}}Show{{/t}}
        </label>
      </div>

      <div class="input-row password-row">
        <label class="label-helper"></label>
        <input type="password" class="password tooltip-below" id="new_password" placeholder="{{#t}}New password{{/t}}" pattern=".{8,}" required {{#isPasswordAutoCompleteDisabled}}autocomplete="off"{{/isPasswordAutoCompleteDisabled}} />

        <input id="show-new-password" type="checkbox" class="show-password" aria-controls="new_password" tabindex="-1" data-novalue />
        <label for="show-new-password" class="show-password-label">
          {{#t}}Show{{/t}}
        </label>

        <div class="input-help">{{#t}}Must be at least 8 characters{{/t}}</div>
      </div>

      <div class="button-row">
        <button type="submit" class="settings-button primary disabled">{{#t}}Change{{/t}}</button>
        <button class="settings-button secondary cancel">{{#t}}Cancel{{/t}}</button>
      </div>
    </form>
  </div>
</div>

<div id="delete-account" class="settings-unit">
  <div class="success">Hello</div>
  <div class="error"></div>
  
  <div class="settings-unit-stub">
    <header class="settings-unit-summary">
      <h2 class="settings-unit-title">{{#t}}Delete account{{/t}}</h2>
    </header>
    <button class="settings-button secondary settings-unit-toggle hidden">{{#t}}Delete {{/t}}</button>
  </div>

  <div class="settings-unit-details">
    <form novalidate>
      <p>{{#t}}Are you sure you want to delete your account? This action cannot be undone.{{/t}}</p>

      <div class="input-row password-row">
        <!-- add the autocomplete=false attribute - the user is deleting the account, they most likely don't want the password saved. -->
        <input type="password" class="password tooltip-below" id="password" placeholder="{{#t}}Password{{/t}}" pattern=".{8,}" required autofocus autocomplete="off" />
        <input id="show-password" type="checkbox" class="show-password" aria-controls="password" tabindex="-1" data-novalue />
        <label for="show-password" class="show-password-label">{{#t}}Show{{/t}}</label>
      </div>

      <div class="button-row">
        <button type="submit" class="settings-button warning disabled">{{#t}}Delete account{{/t}}</button>
        <button class="settings-button secondary cancel">{{#t}}Cancel{{/t}}</button>
      </div>
      
    </form>
  </div>
</div>

</div>

<footer id="legal-footer"><a class="terms" href="/legal/terms">{{#t}}Terms of Service{{/t}}</a><a class="privacy" href="/legal/privacy">{{#t}}Privacy Notice{{/t}}</a></footer>
