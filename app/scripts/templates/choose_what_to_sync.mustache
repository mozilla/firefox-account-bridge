<div id="main-content" class="card">
  <div class="success visible success-email-created">{{#t}}%(email)s registered.{{/t}}</div>
  <div id="choose-what-to-sync-graphic"></div>

  <header>
    <h1 id="fxa-choose-what-to-sync-header">
      {{#t}}Choose what to sync{{/t}}
    </h1>
  </header>

  <section>
    <div class="error"></div>
    <div class="success"></div>

    <form id="choose-what-to-sync" novalidate>
      <div class="two-col-items">
        {{#engines}}
          <div class="input-row choose-what-to-sync-row">
            <label class="fxa-checkbox" id="sync-engine-{{id}}">
              <input name="sync-content" type="checkbox" class="customize-sync" {{#checked}}checked="checked"{{/checked}} value="{{id}}" tabindex="{{tabindex}}">
              <span class="fxa-checkbox__label">
                {{text}}
              </span>
            </label>
          </div>
        {{/engines}}
      </div>
      <div class="button-row">
        <button id="submit-btn" type="submit" tabindex="1" autofocus>{{#t}}Save settings{{/t}}</button>
      </div>
      <div class="links">
        <a href="#" id="back">{{#t}}Back{{/t}}</a>
      </div>
    </form>
  </section>
</div>
